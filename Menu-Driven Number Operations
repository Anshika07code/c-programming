#include <stdio.h>
int main() {
    int n, choice;

    while(1) {
        printf("\n--- Number Menu ---");
        printf("\n1. Even or Odd");
        printf("\n2. Prime Check");
        printf("\n3. Factorial");
        printf("\n4. Exit");
        printf("\nEnter choice: ");
        scanf("%d", &choice);

        if(choice == 4)
            break;

        printf("Enter number: ");
        scanf("%d", &n);

        switch(choice) {
            case 1:
                if(n % 2 == 0) printf("Even");
                else printf("Odd");
                break;
            case 2: {
                int i, flag = 0;
                for(i = 2; i <= n / 2; i++) {
                    if(n % i == 0) {
                        flag = 1;
                        break;
                    }
                }
                if(n <= 1) printf("Not Prime");
                else if(flag == 0) printf("Prime");
                else printf("Not Prime");
                break;
            }
            case 3: {
                int i;
                long fact = 1;
                for(i = 1; i <= n; i++)
                    fact *= i;
                printf("Factorial = %ld", fact);
                break;
            }
            default:
                printf("Invalid choice");
        }
    }
    return 0;
}
